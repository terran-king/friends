<%= form_with(model: friend) do |form| %>
  <% if friend.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(friend.errors.count, "error") %> prohibited this friend from being saved:</h2>

      <ul>
        <% friend.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :first_name, style: "display: block" %>
    <%= form.text_field :first_name, class: "form-control", placeholder: "John" %>
  </div>

  <div class="form-group">
    <%= form.label :last_name, style: "display: block" %>
    <%= form.text_field :last_name, class: "form-control", placeholder: "Doe" %>
  </div>

  <div class="form-group">
    <%= form.label :email, style: "display: block" %>
    <%= form.text_field :email, class: "form-control", placeholder: "johndoe@johndoe.com" %>
  </div>

  <div class="form-group">
    <%= form.label :phone, style: "display: block" %>
    <%= form.text_field :phone, class: "form-control", placeholder: "1111111111" %>
  </div>

  <div class="form-group">
    <%= form.label :twitter, style: "display: block" %>
    <%= form.text_field :twitter, class: "form-control", placeholder: "@johndoe" %>
  </div>

  <div class="form-group">
    <%= form.submit class:"btn btn-secondary" %>
  </div>
<% end %>
